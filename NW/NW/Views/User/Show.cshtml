@using NW.Entity
@using NW.Entity.DataModels;
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
    User user = @ViewBag.CurrentUser as User;
}

<div class="container top-1-8">
    <div class="row ">
        <div class="inner-box col-lg-8">
            <h2>我的打赏</h2>
        </div>
        <div class="inner-box col-lg-3 left-0-1 center-block">
            <img src="@user.Photo" class="face-1 face" />
            <ul class="list-group top-0-1">
                <li class="list-group-item">@user.Username</li>
                <li class="list-group-item">@user.Email</li>
                <li class="list-group-item">@CommonString.RoleDisplay[user.RoleAsInt]</li>
                @if (!string.IsNullOrEmpty(user.Program))
                {
                    <li class="list-group-item">@user.Program</li>
                }
                @if (!string.IsNullOrEmpty(user.QQ))
                {
                    <li class="list-group-item">@user.QQ</li>
                }
                @if (!string.IsNullOrEmpty(user.Remark))
                {
                    <li class="list-group-item">@user.Remark</li>
                }
            </ul>
            <a href="/User/Edit/@user.Id">修改个人资料</a>
        </div>
    </div>

</div>


