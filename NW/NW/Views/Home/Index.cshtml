@using NW.Entity;
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int j = 0;
}
<div id="carousel_body" style="margin-top:50px;">
    @if (ViewBag.CarouselsNum != 0)
    {
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">

                @for (int i = 0; i < ViewBag.CarouselsNum; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                    }
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @foreach (var item in ViewBag.Carousels as List<Carousel>)
                {
                    if (j == 0)
                    {
                        <div class="item active">
                            <img src="@item.ImagePath" alt="@item.Description" class="carousel-image">
                            <div class="carousel-caption">
                                <a href="@item.Href">@item.Description</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img src="@item.ImagePath" alt="@item.Description">
                            <div class="carousel-caption">
                                @item.Description
                            </div>
                        </div>
                    }
                    j++;
                }
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
</div>
<div class="container">
    <div id="main">
        <div id="notice">
            <h3>公告</h3>
            @foreach (var item in ViewBag.Notifications as List<Notification>)
            {
                <div class="alert alert-info">
                    <span style="color:green;">@item.Description</span>&nbsp;&nbsp; <span style="color:green;">@item.CreatedTime</span>&nbsp;&nbsp;
                </div>
            }
        </div>
       
    </div>
</div>
<script>
    var high = $(window).height();
    $(".carousel-image").height(high * 0.6);
</script>