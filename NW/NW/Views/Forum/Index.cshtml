@model PagedList.IPagedList<NW.Entity.Topicforum>
@using PagedList.Mvc
@{
    ViewBag.Title = "论坛";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row" style="margin-top: 80px;">
        <div class="col-md-9">
            <div class="inner-box" style="line-height:34px">
                <span>热门板块：</span>
                @foreach (var item in ViewBag.Plateforums)
                {
                    <a href="#">@item.Title</a>
                }
                <a href="/Forum/Add" class="pull-right btn btn-primary"><strong>我要发布</strong></a>
            </div>
            
            @foreach (var item in Model)
            {
                <div class="inner-box">
                    <div class="entry-header">
                        <h2><a href="/Forum/Show/@item.Id">@item.Title</a>
                        <span class="pull-right plate-name btn-xs">@item.Plateforum.Title</span>
                        </h2>
                        <p class="text-muted entry-header-info">
                            <span class="col-md-2 text-danger">作者：@item.User.Username </span>
                           
                            <span class="col-md-5 text-success">发表时间：@item.Time </span>
                            <span class="col-md-2">浏览量：@item.Browses</span>
                            <span class="col-md-3 text-info">举报：@item.Report</span>
                        </p>
                    </div>
                    <div class="entry-content">
                        @Html.Raw(@item.Content)
                    </div>
                </div>
            }
            @Html.PagedListPager(Model, page => Url.Action("Index?" + @ViewBag.AttachUrl, new { page }))
        </div>
        <aside class="col-md-3">
            <section class="panel  panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>签到</strong></h3>
                </div>
                <div id="categories" class="list-group">
                </div>
            </section>
            <section class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>板块列表</strong></h3>
                </div>
                <div id="recent_posts" class="list-group">
                    @foreach (var item in ViewBag.plateforums)
                    {
                        <a class="list-group-item" href="#">@item.Title</a>
                    }
                </div>
            </section>
        </aside>
    </div>
</div>
