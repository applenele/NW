@model NW.Pager.PagedList<NW.Entity.EXArticleTemp>
@using NW.Pager;
@{
    ViewBag.Title = "博文数据管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font"></i>
        <a href="/Admin/Home/Index">首页</a><span class="crumb-step">&gt;</span><span class="crumb-name">数据管理</span>
    </div>
</div>
<div class="search-wrap">
    <div class="search-content">
        <form action="/Admin/EXArticle/TempIndex" method="get">
            <table class="search-tab">
                <tr>
                    <th width="120">选择分类:</th>
                    <td>
                        <select name="Category" id="">
                            <option value="">全部</option>
                        </select>
                    </td>
                    <th width="70">关键字:</th>
                    <td><input class="common-text" placeholder="关键字" name="Key" type="text"></td>
                    <td><input class="btn btn-primary btn2" name="sub" type="submit"></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div class="result-wrap">
    <form name="myform" id="myform" method="post">
        <div class="result-title">
            <div class="result-list">
                <a id="batchDel" href="javascript:void(0)" data-del="/Admin/EXArticle/TempMutiDelete"><i class="icon-font"></i>批量删除</a>
                <a id="batchImport" href="javascript:void(0)" data-imp="/Admin/EXArticle/TempMutiImport"><i class="icon-font"></i>批量导入</a>
                共：@Model.Total 条数据
            </div>
        </div>
        <div class="result-content">
            <table class="result-tab" width="100%">
                <tr>
                    <th class="tc" width="5%"><input class="allChoose" name="" type="checkbox"></th>
                    <th>ID</th>
                    <th>标题</th>
                    <th>时间</th>
                    <th>网站</th>
                    <th>分类</th>
                    <th>操作</th>
                </tr>
                @foreach (var item in Model.PageListData)
                {
                    <tr id="@item.Id">
                        <td class="tc"><input name="id[]" class="choose" value="@item.Id" type="checkbox"></td>
                        <td>@item.Id</td>
                        <td title="@item.Title">
                            <a href="/Admin/EXArticle/TempShow/@item.Id" title="@item.Title">@item.Title</a>
                        </td>
                        <td>@item.CreateDate</td>
                        <td>@item.Source</td>
                        <td>@item.Category</td>
                        <td>
                            <a class="link-update" href="/Admin/EXArticle/TempEdit/@item.Id">修改</a>
                            <a class="link-del" href="javascript:deleteDialog('/Admin/EXArticle/TempDelete/@item.Id',@item.Id)">删除</a>
                            <a class="link-update"  href="javascript:importDialog('/Admin/EXArticle/TempImport/@item.Id',@item.Id)">入库</a>
                        </td>
                    </tr>
                }
            </table>
            <div class="paginator">
                <span>
                    @Html.PagedListPager(Model.PageIndex, Model.PageCount)
                </span>
            </div>
        </div>
    </form>
</div>
