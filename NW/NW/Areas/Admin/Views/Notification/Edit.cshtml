@model NW.Entity.Notification
@{
    ViewBag.Title = "通告修改";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font">
        </i><a href="/Admin/Home/Index/">首页</a>
        <span class="crumb-step">&gt;</span><a class="crumb-name" href="/Admin/Notification/Index">通告管理</a><span class="crumb-step">&gt;</span><span>修改通告</span>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <form action="/Admin/Notification/Edit" method="post" name="frmEditNotification">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <table class="insert-tab" width="100%">
                <tbody>
                    <tr>
                        <th>内容：</th>
                        <td><textarea name="Description" class="common-textarea" id="content" cols="30" style="width: 98%;" rows="10">@Model.Description</textarea></td>
                    </tr>
                    <tr>
                        <th>优先级：</th>
                        <td>
                            <input class="common-text required" id="Priority" name="Priority" size="50" value="@Model.Priority" type="text">
                        </td>
                    </tr>
                    <tr>
                        <th>是否显示：</th>
                        <td>
                            <select name="IsShow">
                                <option value="true" @(Model.IsShow == true ? "selected" : "")>是</option>
                                <option value="false" @(Model.IsShow == false ? "selected" : "")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn btn-primary btn6 mr10" value="保存" type="submit">
                            <input class="btn btn6" onclick="history.go(-1)" value="返回" type="button">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
