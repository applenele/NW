@model PagedList.IPagedList<NW.Entity.Course>
@using PagedList.Mvc;
@{
    ViewBag.Title = "课程管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font"></i>
        <a href="/Admin/Home/Index">首页</a><span class="crumb-step">&gt;</span><span class="crumb-name">课程管理</span>
    </div>
</div>
<div class="search-wrap">
    <div class="search-content">
        <form action="/Admin/Course/Index" method="get">
            <table class="search-tab">
                <tr>
                    <th width="120">选择分类:</th>
                    <td>
                        <select name="Category" id="">
                            <option value="">全部</option>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Description">@item.Description</option>
                            }
                        </select>
                    </td>
                    <th width="70">关键字:</th>
                    <td><input class="common-text" placeholder="关键字" name="Key" type="text"></td>
                    <td><input class="btn btn-primary btn2" name="sub" type="submit"></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div class="result-wrap">
    <form name="myform" id="myform" method="post">
        <div class="result-title">
            <div class="result-list">
                <a href="/Admin/Course/Add"><i class="icon-font"></i>新增课程</a>
                <a id="batchDel" href="javascript:void(0)"><i class="icon-font"></i>批量删除</a>
                <a id="updateOrd" href="javascript:void(0)"><i class="icon-font"></i>更新排序</a>
            </div>
        </div>
        <div class="result-content">
            <table class="result-tab" width="100%">
                <tr>
                    <th class="tc" width="5%"><input class="allChoose" name="" type="checkbox"></th>
                    <th>ID</th>
                    <th>标题</th>
                    <th>封面</th>
                    <th>分类</th>
                    <th>添加时间</th>
                    <th>主讲人</th>
                    <th>操作</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td class="tc"><input name="id[]" value="59" type="checkbox"></td>
                        <td>@item.Id</td>
                        <td title="@item.Title">
                            <a href="/Admin/Course/Show/@item.Id" title="@item.Title">@item.Title</a>
                        </td>
                        <td>@item.Cover</td>
                        <td>@item.Category</td>
                        <td>@item.Time</td>
                        <td>@item.Lecturer</td>
                        <td>
                            <a class="link-update" href="/Admin/Blog/Edit/@item.Id">修改</a>
                            <a class="link-del" href="javascript:deleteDialog('/Admin/Blog/Delete/@item.Id',@item.Id)">删除</a>
                        </td>
                    </tr>
                }
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </form>
</div>

