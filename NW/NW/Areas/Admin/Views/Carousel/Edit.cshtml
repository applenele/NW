@model NW.Entity.Carousel
@{
    ViewBag.Title = "轮播修改";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font">
        </i><a href="/Admin/Home/Index/">首页</a>
        <span class="crumb-step">&gt;</span><a class="crumb-name" href="/Admin/Carousel/Index">轮播管理</a><span class="crumb-step">&gt;</span><span>修改轮播</span>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <form action="/Admin/Carousel/Edit" method="post" name="frmAddNotification">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <table class="insert-tab" width="100%">
                <tbody>
                    <tr>
                        <th>描述：</th>
                        <td><textarea name="Description" class="common-textarea" id="content" cols="30" style="width: 98%;" rows="10">@Model.Description</textarea></td>
                    </tr>
                    <tr>
                        <th>链接：</th>
                        <td>
                            <input class="common-text required" id="Href" name="Href" value="@Model.Href" size="50" type="text">
                        </td>
                    </tr>
                    <tr>
                        <th>图片地址：</th>
                        <td>
                            <input class="common-text required" id="ImagePath" value="@Model.ImagePath" name="ImagePath" size="50" type="text">
                            （例如：/Images/xxx.jpg）
                        </td>
                    </tr>
                    <tr>
                        <th>是否显示：</th>
                        <td>
                            <select name="IsShow">
                                <option value="1" @(Model.IsShow == 1 ? "selected" : "")>是</option>
                                <option value="0" @(Model.IsShow == 0 ? "selected" : "")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否删除：</th>
                        <td>
                            <select name="IsDelete">
                                <option value="1" @(Model.IsDelete==1?"selected":"")>是</option>
                                <option value="0" @(Model.IsDelete==0?"selected":"")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否置顶：</th>
                        <td>
                            <select name="Top">
                                <option value="1" @(Model.Top==1?"selected":"")>是</option>
                                <option value="0" @(Model.Top==0?"selected":"")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn btn-primary btn6 mr10" value="提交" type="submit">
                            <input class="btn btn6" onclick="history.go(-1)" value="返回" type="button">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
