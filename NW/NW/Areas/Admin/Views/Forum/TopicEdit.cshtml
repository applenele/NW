@model NW.Entity.Topicforum
@{
    ViewBag.Title = "主题修改";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font">
        </i><a href="/Admin/Home/Inedx">首页</a>
        <span class="crumb-step">&gt;</span><a class="crumb-name" href="/Admin/Forum/Index">论坛管理</a><span class="crumb-step">&gt;</span><span>修改主题</span>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <form action="/Admin/Forum/TopicEdit" method="post" name="frmEditTopic">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id"/>
            <input type="hidden" value="@Model.PlateforumId" name="PlateforumId"/>
            <table class="insert-tab" width="100%">
                <tbody>
                    <tr>
                        <th><i class="require-red">*</i>标题：</th>
                        <td>
                            <input class="common-text required" id="Title" name="Title" value="@Model.Title" size="50" type="text">
                        </td>
                    </tr>
                    <tr>
                        <th>描述：</th>
                        <td><textarea name="Content" class="common-textarea" id="content" cols="30" style="width: 98%;" rows="10">@Model.Content</textarea></td>
                    </tr>
                    <tr>
                        <th>是否置顶：</th>
                        <td>
                            <select name="Top">
                                <option value="true" @(Model.Top == true ? "selected" : "")>是</option>
                                <option value="false" @(Model.Top == false ? "selected" : "")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否显示：</th>
                        <td>
                            <select name="IsShow">
                                <option value="true" @(Model.IsShow == true ? "selected" : "")>是</option>
                                <option value="false" @(Model.IsShow == false ? "selected" : "")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否开启：</th>
                        <td>
                            <select name="IsClose">
                                <option value="true" @(Model.IsClose == true ? "selected" : "")>是</option>
                                <option value="false" @(Model.IsClose == false ? "selected" : "")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否官方认证：</th>
                        <td>
                            <select name="IsOfficeIdentified">
                                <option value="true" @(Model.IsOfficeIdentified == true ? "selected" : "")>是</option>
                                <option value="false" @(Model.IsOfficeIdentified == false ? "selected" : "")>否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn btn-primary btn6 mr10" value="保存" type="submit">
                            <input class="btn btn6" onclick="history.go(-1)" value="返回" type="button">
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>@Html.ValidationSummary()</td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
