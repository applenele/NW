@{
    ViewBag.Title = "增加主题";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font">
        </i><a href="/Admin/Home/Inedx">首页</a>
        <span class="crumb-step">&gt;</span><a class="crumb-name" href="/Admin/Forum/Index">论坛管理</a><span class="crumb-step">&gt;</span><span>增加主题</span>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <form action="/Admin/Forum/TopicAdd" method="post" name="frmAddTopic">
            @Html.AntiForgeryToken()
            <input type="hidden" name="PlateforumId" value="@ViewBag.PlateId" />
            <table class="insert-tab" width="100%">
                <tbody>
                    <tr>
                        <th><i class="require-red">*</i>标题：</th>
                        <td>
                            <input class="common-text required" id="Title" name="Title" size="50" type="text">
                        </td>
                    </tr>
                    <tr>
                        <th>描述：</th>
                        <td><textarea name="Content" class="common-textarea" id="content" cols="30" style="width: 98%;" rows="10"></textarea></td>
                    </tr>
                    <tr>
                        <th>是否置顶：</th>
                        <td>
                            <select name="Top">
                                <option value="true">是</option>
                                <option value="false">否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否显示：</th>
                        <td>
                            <select name="IsShow">
                                <option value="true">是</option>
                                <option value="false">否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否开启：</th>
                        <td>
                            <select name="IsClose">
                                <option value="true">是</option>
                                <option value="false">否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>是否官方认证：</th>
                        <td>
                            <select name="IsOfficeIdentified">
                                <option value="true">是</option>
                                <option value="false">否</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn btn-primary btn6 mr10" value="提交" type="submit">
                            <input class="btn btn6" onclick="history.go(-1)" value="返回" type="button">
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>@Html.ValidationSummary()</td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

