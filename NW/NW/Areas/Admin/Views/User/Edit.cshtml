@model NW.Entity.User
@{
    ViewBag.Title = "用户修改";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font">
        </i><a href="/Admin/Home/Index">首页</a>
        <span class="crumb-step">&gt;</span><a class="crumb-name" href="/Admin/User/Index">用户管理</a><span class="crumb-step">&gt;</span><span>修改用户</span>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <form action="/Admin/User/Edit" method="post" name="frmEditUser">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <table class="insert-tab" width="100%">
                <tbody>
                    <tr>
                        <th><i class="require-red">*</i>用户名：</th>
                        <td>
                            @Html.TextBoxFor(model => model.Username, new { @class = "common-text required", @size = "50" })
                        </td>
                    </tr>
                    <tr>
                        <th>邮箱：</th>
                        <td>
                            @Html.TextBoxFor(model => model.Email, new { @class = "common-text required", @size = "50" })
                        </td>
                    </tr>
                    <tr>
                        <th>电话：</th>
                        <td>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "common-text required", @size = "50" })
                        </td>
                    </tr>
                    <tr>
                        <th>QQ：</th>
                        <td>
                            @Html.TextBoxFor(model => model.QQ, new { @class = "common-text required", @size = "50" })
                        </td>
                    </tr>
                    <tr>
                        <th>图像：</th>
                        <td>
                            @Html.TextBoxFor(model => model.Photo, new { @class = "common-text required", @size = "50" })
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn btn-primary btn6 mr10" value="提交" type="submit">
                            <input class="btn btn6" onclick="history.go(-1)" value="返回" type="button">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
