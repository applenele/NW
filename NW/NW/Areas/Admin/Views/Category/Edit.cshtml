@model NW.Entity.Category
@{
    ViewBag.Title = Model.Description;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font">
        </i><a href="/Admin/Home/Index">首页</a>
        <span class="crumb-step">&gt;</span><a class="crumb-name" href="/Admin/Category/Index">分类管理</a><span class="crumb-step">&gt;</span><span>修改分类</span>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <form action="/Admin/Category/Edit" method="post" name="frmEditBlog" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <table class="insert-tab" width="100%">
                <tbody>
                    <tr>
                        <th>内容：</th>
                        <td><textarea name="Description" class="common-textarea" id="content" cols="30" style="width: 98%;" rows="10">@Model.Description</textarea></td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <input class="btn btn-primary btn6 mr10" value="提交" type="submit">
                            <input class="btn btn6" onclick="history.go(-1)" value="返回" type="button">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
