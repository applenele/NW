<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <connectionStrings>
    <add name="mysqldb" connectionString="Server=localhost;Port=3306;Database=nw;Uid=root;Password=root;Character Set=utf8;" providerName="MySql.Data.MySqlClient"/>
  </connectionStrings>
  <log4net>
    <root>
      <level value="all" name="myLogger"/>
      <appender-ref ref="AdoNetAppender"/>
    </root>
    <appender name="AdoNetAppender" type="log4net.Appender.AdoNetAppender">
      <!--BufferSize为缓冲区大小，只有日志记录超1条才会一块写入到数据库-->
      <bufferSize value="1"/>
      <param name="ConnectionType" value="MySql.Data.MySqlClient.MySqlConnection, MySql.Data"/>
      <param name="ConnectionString" value="server=localhost;database=nw;Uid=root;Pwd=root;"/>
      <!--插入到表Log-->
      <commandText value="INSERT INTO Logs (Time,Thread,Level,Type,Description,Exception,Ip) VALUES (@Time,@Thread,@Level,@Type,@Description,@Exception,@Ip)"/>
      <!--日志记录时间，RawTimeStampLayout为默认的时间输出格式 -->
      <parameter>
        <parameterName value="@Time"/>
        <dbType value="DateTime"/>
        <layout type="log4net.Layout.RawTimeStampLayout"/>
      </parameter>
      <parameter>
        <parameterName value="@Thread"/>
        <dbType value="String"/>
        <size value="255"/>
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%t"/>
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@Level"/>
        <dbType value="String"/>
        <size value="255"/>
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%p"/>
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@Description"/>
        <dbType value="String"/>
        <size value="4000"/>
        <layout type="NW.Log4net.CustomLayout">
          <conversionPattern value="%property{Description}"/>
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@Type"/>
        <dbType value="String"/>
        <size value="255"/>
        <layout type="NW.Log4net.CustomLayout">
          <conversionPattern value="%property{Type}"/>
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@Exception"/>
        <dbType value="String"/>
        <size value="4000"/>
        <layout type="log4net.Layout.ExceptionLayout"/>
      </parameter>
      <parameter>
        <parameterName value="@Ip"/>
        <dbType value="String"/>
        <size value="40"/>
        <layout type="NW.Log4net.CustomLayout">
          <conversionPattern value="%property{Ip}"/>
        </layout>
      </parameter>
    </appender>
  </log4net>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0"/>
    <add key="webpages:Enabled" value="false"/>
    <add key="ClientValidationEnabled" value="true"/>
    <add key="UnobtrusiveJavaScriptEnabled" value="true"/>

    <add key="SmtpServer" value="smtp.qq.com"/>
    <add key="SmtpPort" value="25"/>
    <add key="UserName" value="1941973283@qq.com"/>
    <add key="From" value="1941973283@qq.com"/>
    <add key="Password" value="lenny19920716"/>
    
  </appSettings>
  <!--
